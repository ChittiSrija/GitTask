@model EVOKETASK.Models.EmpList

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Employee</h1>

            <form asp-action="EditView" method="post">
                <table>
                    <tr>
                        <th><label asp-for="ID"></label></th>
                        <td><input asp-for="ID" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="NAME"></label></th>
                        <td><input asp-for="NAME" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="EMAIL"></label></th>
                        <td><input asp-for="EMAIL" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="PHONENUMBER"></label></th>
                        <td><input asp-for="PHONENUMBER" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label asp-for="DEPTNAME"></label></th>
                        <td><input asp-for="DEPTNAME" class="form-control" /></td>
                    </tr>
                    <tr>
                        <th><label>GNAME:</label></th>
                        <td>
                            <label><input type="radio" name="GNAME" value="Male"> Male</label>
                            <label><input type="radio" name="GNAME" value="Female"> Female</label>
                            <label><input type="radio" name="GNAME" value="Other"> Other</label>
                        </td>
                    </tr>
                    <tr>
                        <th><button type="submit" class="btn btn-danger">Confirm</button></th>
                        <th><a asp-action="Index" class="btn btn-default">Cancel</a></th>
                    </tr>
                    <tr>
                        <th><a asp-action="EmpDetails">Back to List</a></th>


                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>

